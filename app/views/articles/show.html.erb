<% title "Article" %>

<p>
  <strong>Name:</strong>
  <%=h @article.name %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @article.description %>
</p>

<p>
<%= link_to "Comments (#{@article.comments.count})", article_comments_path(@article) %>
</p>

<p>

  <%= link_to "Edit", edit_article_path(@article) %> |
  Version <%= @article.version %>
  <% if @article.version > 1 %>
	: <%= link_to "Previous version", :version => @article.version-1%>
  <% end %>
  <% if params[:version] %>
	: <%= link_to "Latest version", :version => nil %>
  <% end %> |
  <%= link_to "Destroy", @article, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All Articles", :articles %>
</p>
